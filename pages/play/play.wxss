.playimg{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0rpx;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  opacity: 0.5;
}
.namestyle{
      position: fixed;
      top: 100rpx;
      left:0rpx;
      font-weight: bold;
      text-align: center;
      width: 750rpx;
      color: #222;
