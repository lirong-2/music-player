#cdimg{
  width: 250rpx;
  height: 250rpx;
  border-radius:50%;
  border: 100rpx solid rgba(0, 0, 0, 0.8);
  position: fixed;
  top: 130rpx;
  left: 150rpx;
}
.controlbag{
  width: 750rpx;
  height: 100rpx;
  background: #dd6980;
  position: fixed;
  bottom: 0rpx;
}
.controlbag image{
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  margin-left: 127rpx;
}
@keyframes xuanzhuan{
  from{
           transform: rotate(0deg);
  }
  to{
         transform: rotate(360deg);
  }
}
.xuanzhuan{
  animation: xuanzhuan 6s linear infinite;
}
